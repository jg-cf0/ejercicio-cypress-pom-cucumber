{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "types": ["cypress", "node", "cypress-cucumber-preprocessor"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["cypress/pages/*"],
      "@steps/*": ["cypress/integration/steps/*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "cypress/**/*.js",
    "cypress/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
