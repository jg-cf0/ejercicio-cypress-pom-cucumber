{
  "compilerOptions": {
    "allowJs": true, 
    "checkJs": false,
    "noEmit": true, 
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "types": ["cypress", "node", "cypress-cucumber-preprocessor"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["cypress/support/pageObjects/*"],
      "@steps/*": ["cypress/e2e/steps/*"]
    }
  },
  "include": [
    "cypress/**/*.js",
    "cypress/e2e/**/*.js",
    "cypress/support/**/*.js"
  ],
  "exclude": ["node_modules"]
}
